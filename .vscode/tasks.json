{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe 生成活动文件",
			"command": "F:\\C++\\MINGW64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-L",
				"F:/C++/FFMPEG-SHARE/lib",
				"-L",
				"F:/C++/SDL2/lib/x64",
				"-I",
				"F:/C++/FFMPEG-SHARE/include",
				"-I",
				"F:/C++/SDL2/include",


				"-lSDL2",
				"-lavcodec",
				"-lavdevice",
				"-lavfilter",
				"-lavformat",
				"-lavutil",
				"-lswresample",
				"-lswscale",



				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "F:\\C++\\MINGW64\\bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "编译器: F:\\C++\\MINGW64\\bin\\g++.exe"
		}
	]
}